@model GiftoftheGiversFoundationApp.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/site.css"> <!-- Custom CSS -->
<div class="container mt-5">

    <h2 class="text-center mb-4">Admin Dashboard</h2>
    <center>
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
        <img src="~/images/logo.png" alt="GiftoftheGiversFoundation" width="350" />
    </a>
    </center>
    <!-- Disasters Reported Section -->
    <h3>Disasters Reported</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Location</th>
                <th>Description</th>
                <th>Date Reported</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Disasters != null && Model.Disasters.Any())
            {
                @foreach (var disaster in Model.Disasters)
                {
                    <tr>
                        <td>@disaster.Id</td>
                        <td>@disaster.Location</td>
                        <td>@disaster.Description</td>
                        <td>@disaster.DateReported</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No disaster reports yet.</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <!-- Donations Section -->
    <h3>Goods Donated</h3>
    <div class="row">
        <div class="col-md-6">
            <h4>Donations</h4>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Donor Name</th>
                        <th>Item</th>
                        <th>Date Donated</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donation in Model.Donations)
                    {
                        <tr>
                            <td>@donation.DonorName</td>
                            <td>@donation.Item</td>
                            <td>@donation.DateDonated.ToString("yyyy-MM-dd")</td>
                            <td>@donation.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    <hr />

    <!-- Volunteers Section -->
    <h3>Volunteers</h3>
        <div class="col-md-6">
            <h4>Volunteers</h4>
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Assigned Task</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var volunteer in Model.Volunteers)
                    {
                        <tr>
                            <td>@volunteer.Name</td>
                            <td>@volunteer.AssignedTask</td>
                            <td>@volunteer.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

</div>
