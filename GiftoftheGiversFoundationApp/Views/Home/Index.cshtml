@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel-item img {
        width: 70%; /* Adjust percentage or use pixels */
        height: auto; /* Keep aspect ratio intact */
        margin: 0 auto;
    }
</style>

<div class="text-center">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
        <img src="~/images/logo.png" alt="GiftoftheGiversFoundation" width="350" />
    </a>

    <h1>Welcome to Gift of the Givers Foundation</h1>

    <!-- Add a short About section -->
    <div style="margin-top: 20px;">
        <p>
            Gift of the Givers Foundation is dedicated to providing disaster relief and humanitarian aid
            to those affected by natural disasters, conflicts, and emergencies. We are committed to
            alleviating suffering and improving the lives of those in need through food, medical care,
            and community support.
        </p>
    </div>

    <!-- Login and Register buttons -->
    <div style="margin-top: 20px;">
        <a asp-controller="Home" asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-controller="Home" asp-action="Register" class="btn btn-secondary">Register</a>
    </div>

    <!-- News & Updates Feature -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h3>Latest News & Updates</h3>
                <p class="lead">Stay informed with the latest from Gift of the Givers Foundation.</p>
                <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title">Ongoing Disaster Relief Efforts</h5>
                        <p class="card-text">Our teams are currently active in disaster-affected areas across the country. Click below to learn how you can help or volunteer.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Areas of Impact -->
    <section class="impact-areas py-5 bg-light">
        <div class="container">
            <h2 class="text-primary text-center">Our Areas of Impact</h2>
            <div class="row text-center">
                <div class="col-md-4">
                    <i class="fas fa-hands-helping fa-3x text-primary"></i>
                    <h4 class="mt-3">Disaster Relief</h4>
                    <p>Providing life-saving aid during natural disasters like floods, droughts, and earthquakes.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-stethoscope fa-3x text-primary"></i>
                    <h4 class="mt-3">Healthcare</h4>
                    <p>Delivering critical medical services to communities affected by war, famine, or epidemics.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-school fa-3x text-primary"></i>
                    <h4 class="mt-3">Education</h4>
                    <p>Supporting educational programs and building schools in underprivileged areas.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Impact in Numbers -->
    <section class="impact-numbers py-5 text-center bg-dark text-white">
        <div class="container">
            <h2 class="text-white">Our Impact in Numbers</h2>
            <div class="row">
                <div class="col-md-3">
                    <h3 class="display-4">43</h3>
                    <p>Countries Served</p>
                </div>
                <div class="col-md-3">
                    <h3 class="display-4">$100M</h3>
                    <p>Aid Distributed</p>
                </div>
                <div class="col-md-3">
                    <h3 class="display-4">10K+</h3>
                    <p>Volunteers</p>
                </div>
                <div class="col-md-3">
                    <h3 class="display-4">20M+</h3>
                    <p>Lives Impacted</p>
                </div>
            </div>
        </div>
    </section>


    <!-- NMission Statement -->
    <section class="mission-statement py-5 text-center bg-light">
        <div class="container">
            <h2 class="text-primary">Our Mission</h2>
            <p class="lead">
                At Gift of the Givers Foundation, our mission is to provide humanitarian aid and disaster relief in times of crisis. We strive to make a difference by delivering essential resources such as food, water, medical care, and shelter to those in need, regardless of race, religion, or background.
            </p>
        </div>
    </section>

    <section class="call-to-action py-5 text-center">
        <div class="container">
            <h2 class="text-primary">Get Involved</h2>
            <p class="lead">Join us in making a difference. Your help is crucial in reaching more people in need.</p>
            <a href="/Home/Donation" class="btn btn-primary btn-lg mr-3">Donate Now</a>
            <a href="/Home/Volunteer" class="btn btn-outline-primary btn-lg">Become a Volunteer</a>
        </div>
    </section>

    


    <!-- Image Carousel -->
    <div id="organizationCarousel" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="hover" data-wrap="false">
        <ol class="carousel-indicators">
            <li data-target="#organizationCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#organizationCarousel" data-slide-to="1"></li>
            <li data-target="#organizationCarousel" data-slide-to="2"></li>
            <li data-target="#organizationCarousel" data-slide-to="3"></li>
            <li data-target="#organizationCarousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/org1.jpg" class="d-block" alt="Organization Image 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Helping Communities</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/org2.jpg" class="d-block" alt="Organization Image 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Disaster Relief Efforts</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/org3.jpg" class="d-block" alt="Organization Image 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Volunteering in Action</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/org4.jpg" class="d-block" alt="Organization Image 4">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Volunteering in Action</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/org5.jpg" class="d-block" alt="Organization Image 5">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Volunteering in Action</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/org6.jpg" class="d-block" alt="Organization Image 6">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Volunteering in Action</h5>
                    <p>Caption or description of the image.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#organizationCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#organizationCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- About Us -->
    <section class="about-us py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-primary">About Gift of the Givers</h2>
                    <p>
                        Founded in 1992, Gift of the Givers has become Africa's largest disaster response NGO. We are driven by the desire to help communities during times of crisis, be it natural disasters, humanitarian crises, or medical emergencies. With operations in over 43 countries, we have delivered aid to millions of people, providing hope and support during their most challenging times.
                    </p>
                </div>
                <div class="col-md-6">
                    <img src="~/images/about-us.jpg" class="img-fluid" alt="About Gift of the Givers">
                </div>
            </div>
        </div>
    </section>

    <section class="partners py-5 text-center">
        <div class="container">
            <h2 class="text-primary">Our Partners</h2>
            <p>We collaborate with global organizations to maximize our reach and impact.</p>
            <div class="row">
                <div class="col-md-3">
                    <img src="~/images/partner1.jpg" alt="Partner Logo" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/images/partner2.jpg" alt="Partner Logo" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/images/partner3.jpg" alt="Partner Logo" class="img-fluid">
                </div>
                <div class="col-md-3">
                    <img src="~/images/partner4.jpg" alt="Partner Logo" class="img-fluid">
                </div>
            </div>
        </div>
    </section>




</div>
>
