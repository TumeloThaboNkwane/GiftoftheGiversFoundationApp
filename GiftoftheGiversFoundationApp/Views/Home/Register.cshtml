@{
    ViewData["Title"] = "Register";
}

<center>
<h2>Register</h2>
<a class="navbar-brand" asp-controller="Home" asp-action="Index">
   <img src="~/images/logo.png" alt="GiftoftheGiversFoundation" width="350"/>
</a>

<form method="post" asp-action="Register">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

<!-- Link to redirect users to login if they already have an account -->
<p class="mt-3">
    Already have an account?
    <a asp-controller="Home" asp-action="Login" class="btn btn-link">Click here to login</a>.
</p>
</Center>


